@{
        ViewBag.Title = "Scales";
        Layout = "~/Views/Shared/_LayoutMinimal.cshtml";

        var _notes = new List<string> { "C", "C#", "D", "D#", "E", "F", "F#", "G", "G#", "A", "A#", "B" };
    var _totalSteps = 15;
    }
    @section Styles
    {
    
}
<div id="danMenu">
    <div id="pickKey">Key</div>
</div>
<div class="selKey" id="selKey">
    @for (int i = 0; i < _notes.Count(); i++)
    {
        <div class="optSelect @(_notes[i].Length > 1 ? "optSelectAccidental" : "")" data-key="@i">@_notes[i]</div>
    }
</div>
<div id="base">
    @for (int i = 0; i < _totalSteps; i++)
            {
                var intIdx = i % 7;
    <div class="row step interval@(intIdx)" id="step@(i)">
        <div class="col-xs-1"></div>
        <div class="col-xs-1 noteName interval@(intIdx)"></div>
        <div class="col-xs-1"></div>
        <div class="col-xs-2 chordForm interval@(intIdx)"></div>
        <div class="col-xs-1 root innerInterval interval0" title="root"></div>
        <div class="col-xs-1 third innerInterval interval2" title="3rd"></div>
        <div class="col-xs-1 fifth innerInterval interval4" title="5th"></div>
        <div class="col-xs-1"></div>
        <div class="col-xs-1 seventh innerInterval interval6" title="7th"></div>
    </div>
    }
</div>

@section Scripts
{
    <script type="text/javascript">
        let scales = new Scales();
    </script>
}
